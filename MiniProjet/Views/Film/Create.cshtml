<body class="topics-listing-page" id="top">
    <main>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" class="custom-form contact-form" role="form" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="col-lg-6 col-md-6 col-12">
                        <div class="form-floating">
                            <input asp-for="Titre" type="text" class="form-control" placeholder="Title">
                            <label asp-for="Titre">Title</label>
                            <span asp-validation-for="Titre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-12">
                        <div class="form-floating">
                            <input asp-for="Genre" type="text" name="Genre" id="Genre" class="form-control" placeholder="Genre" required="">
                            <span asp-validation-for="Genre" class="text-danger"></span>
                            <label for="floatingInput">Genre</label>
                        </div>
                    </div>
                    <div class="col-lg-12 col-12">
                        <div class="form-floating">
                            <input asp-for="DatePublication" type="date" name="DateDePublication" id="DateDePublication" class="form-control" placeholder="Date De Publication" required="">
                            <span asp-validation-for="DatePublication" class="text-danger"></span>
                            <label for="floatingInput">Date De Publication</label>
                        </div>
                    </div>
                    <div class="form-floating">
                        <textarea asp-for="Resume" class="form-control" id="Resume" name="Resume" placeholder="Resume"></textarea>
                        <span asp-validation-for="Resume" class="text-danger"></span>
                        <label for="floatingTextarea">Resume</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="HostCinemaId" class="control-label"></label>
                        <select asp-for="HostCinemaId" class="form-control" asp-items="ViewBag.Id as SelectList">
                            <option value="">Select Cinema</option>
                        </select>
                        <span asp-validation-for="HostCinemaId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Poster" class="control-label"></label>
                        <input type="file" id="Poster" name="posterImage" class="form-control" />
                        <span asp-validation-for="Poster" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-12 ms-auto">
                            <button class="form-control" asp-controller="Film" asp-action="Index">Back to List</button>
                        </div>
                        <div class="col-lg-4 col-12 ms-auto">
                            <button type="submit" class="form-control">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <!-- JAVASCRIPT FILES -->
